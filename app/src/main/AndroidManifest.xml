<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.straight_habits">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StraightHabits">
        <activity
            android:name="com.example.straight_habits.activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:launchMode="singleInstance": there's only one instance of the activity -->
        <activity
            android:name="com.example.straight_habits.activity.AddHabitActivity"
            android:exported="true"
            android:launchMode="singleInstance" /> <!-- android:launchMode="singleInstance": there's only one instance of the activity -->
        <activity
            android:name="com.example.straight_habits.activity.MainActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>